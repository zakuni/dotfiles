{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "uptime": {
      "before": "⇑  "
    },
    "date": {
      "before": "⌚ "
    }
  },
  "segments": {
    "right": [
      {
        "name": "external_ip",
        "priority": 50
      },    
      {
        "name": "uptime",
        "priority": 50
      },
      {
        "name": "system_load",
        "priority": 50
      },
      {
        "name": "network_load",
        "priority": 50
      },
      {
        "name": "date",
        "priority": 51
      },
      {
        "name": "date",
        "args": {
          "format": "%H:%M",
          "istime": true
        }
      },
      {
        "name": "hostname",
        "args": {
          "only_if_ssh": true
        }
      },
      {
        "name": "branch"
      },
      {
        "name": "battery",
        "args": {
          "gamify": true
        },
        "priority": 50
      }
    ]
  }
